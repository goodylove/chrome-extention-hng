{
  "manifest_version": 3,
  "name": "Helpmeout",
  "description": "Enable users to take a screen recording of their screen.",
  "version": "1.0.0",
  "icons": {
    "16": "/images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/logo.png"
    }
  },

  "permissions": ["activeTab", "scripting", "tabs"],

  "host_permissions": ["http://*/*", "https://*/*"]
}
